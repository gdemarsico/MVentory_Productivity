<?xml version="1.0"?>
<config>
  <modules>
    <ZetaPrints_MvProductivityPack>
      <version>1.0.1</version>
    </ZetaPrints_MvProductivityPack>
  </modules>

  <global>
    <blocks>
      <MvProductivityPack>
        <class>ZetaPrints_MvProductivityPack_Block</class>
      </MvProductivityPack>

      <catalog>
        <rewrite>
          <product_view>ZetaPrints_MvProductivityPack_Block_Product_View</product_view>
        </rewrite>
      </catalog>

      <adminhtml>
        <rewrite>
          <catalog_product_attribute_edit_tab_options>ZetaPrints_MvProductivityPack_Block_Catalog_Product_Attribute_Edit_Tab_Options</catalog_product_attribute_edit_tab_options>
        </rewrite>
      </adminhtml>
    </blocks>

    <helpers>
      <MvProductivityPack>
        <class>ZetaPrints_MvProductivityPack_Helper</class>
      </MvProductivityPack>

      <catalog>
        <rewrite>
          <category>ZetaPrints_MvProductivityPack_Helper_Mage_Catalog_Category</category>
        </rewrite>
      </catalog>
    </helpers>

    <models>
      <MvProductivityPack>
        <class>ZetaPrints_MvProductivityPack_Model</class>
        <resourceModel>ZetaPrints_MvProductivityPack_resources</resourceModel>
      </MvProductivityPack>
    </models>
  </global>

  <frontend>
    <layout>
      <updates>
        <productivity>
          <file>productivity.xml</file>
        </productivity>

        <catalog_productivity>
          <file>catalog/productivity.xml</file>
        </catalog_productivity>
      </updates>
    </layout>

    <routers>
      <MvProductivityPack>
        <use>standard</use>
        <args>
          <module>ZetaPrints_MvProductivityPack</module>
          <frontName>mvproductivitypackf</frontName>
        </args>
      </MvProductivityPack>

      <catalog>
        <args>
          <modules>
            <ZetaPrints_MvProductivityPack before="Mage_Catalog">ZetaPrints_MvProductivityPack</ZetaPrints_MvProductivityPack>
          </modules>
        </args>
      </catalog>
    </routers>

    <events>
      <controller_action_layout_render_before_catalog_category_view>
        <observers>
          <productivity_add_category_feed>
            <type>singleton</type>
            <class>ZetaPrints_MvProductivityPack_Model_Observer</class>
            <method>addCategoryFeed</method>
          </productivity_add_category_feed>
        </observers>
      </controller_action_layout_render_before_catalog_category_view>

      <controller_action_layout_render_before_cms_index_index>
        <observers>
          <productivity_add_latest__product_feed>
            <type>singleton</type>
            <class>ZetaPrints_MvProductivityPack_Model_Observer</class>
            <method>addLatestProductsFeed</method>
          </productivity_add_latest__product_feed>

          <productivity_add_top_categories_feed>
            <type>singleton</type>
            <class>ZetaPrints_MvProductivityPack_Model_Observer</class>
            <method>addTopCategoriesFeed</method>
          </productivity_add_top_categories_feed>
        </observers>
      </controller_action_layout_render_before_cms_index_index>

      <controller_action_predispatch_catalog>
        <observers>
          <productivity_remember_admin_state>
            <type>singleton</type>
            <class>ZetaPrints_MvProductivityPack_Model_Observer</class>
            <method>rememberAdminState</method>
          </productivity_remember_admin_state>
        </observers>
      </controller_action_predispatch_catalog>

      <controller_action_predispatch_cms>
        <observers>
          <productivity_remember_admin_state>
            <type>singleton</type>
            <class>ZetaPrints_MvProductivityPack_Model_Observer</class>
            <method>rememberAdminState</method>
          </productivity_remember_admin_state>
        </observers>
      </controller_action_predispatch_cms>

      <catalog_block_product_list_collection>
        <observers>
          <productivity_show_products_without_small_image_only>
            <type>singleton</type>
            <class>ZetaPrints_MvProductivityPack_Model_Observer</class>
            <method>showProductsWithoutSmallImagesOnly</method>
          </productivity_show_products_without_small_image_only>
        </observers>
      </catalog_block_product_list_collection>
    </events>
  </frontend>

  <admin>
    <routers>
      <MvProductivityPack>
        <use>admin</use>
        <args>
          <module>ZetaPrints_MvProductivityPack</module>
          <frontName>mvproductivitypack</frontName>
        </args>
      </MvProductivityPack>
    </routers>
  </admin>

  <adminhtml>
    <events>
      <catalog_entity_attribute_save_before>
        <observers>
          <productivity_merge_attribute_options>
            <type>singleton</type>
            <class>ZetaPrints_MvProductivityPack_Model_Observer</class>
            <method>mergeAttributeOptions</method>
          </productivity_merge_attribute_options>
        </observers>
      </catalog_entity_attribute_save_before>
    </events>

    <layout>
      <updates>
        <MvProductivityPack>
          <file>zetaprints_mvproductivitypack.xml</file>
        </MvProductivityPack>
      </updates>
    </layout>
  </adminhtml>
</config>
