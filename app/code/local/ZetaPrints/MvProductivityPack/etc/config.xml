<?xml version="1.0"?>
<config>
  <modules>
    <ZetaPrints_MvProductivityPack>
      <version>1.0.1</version>
    </ZetaPrints_MvProductivityPack>
  </modules>

  <global>
    <blocks>
      <MvProductivityPack>
        <class>ZetaPrints_MvProductivityPack_Block</class>
      </MvProductivityPack>

      <catalog>
        <rewrite>
          <product_view_media>ZetaPrints_MvProductivityPack_Block_Product_View_Media</product_view_media>
        </rewrite>
      </catalog>
    </blocks>

    <helpers>
      <MvProductivityPack>
        <class>ZetaPrints_MvProductivityPack_Helper</class>
      </MvProductivityPack>
    </helpers>

    <models>
      <MvProductivityPack>
        <class>ZetaPrints_MvProductivityPack_Model</class>
        <resourceModel>ZetaPrints_MvProductivityPack_resources</resourceModel>
      </MvProductivityPack>
    </models>
  </global>

  <frontend>
    <layout>
      <updates>
        <productivity>
          <file>productivity.xml</file>
        </productivity>

        <MvProductivityPack>
          <file>zetaprints_mvproductivitypack.xml</file>
        </MvProductivityPack>
      </updates>
    </layout>

    <routers>
      <MvProductivityPack>
        <use>standard</use>
        <args>
          <module>ZetaPrints_MvProductivityPack</module>
          <frontName>mvproductivitypackf</frontName>
        </args>
      </MvProductivityPack>

      <catalog>
        <args>
          <modules>
            <ZetaPrints_MvProductivityPack before="Mage_Catalog">ZetaPrints_MvProductivityPack</ZetaPrints_MvProductivityPack>
          </modules>
        </args>
      </catalog>

      <cms>
        <args>
          <modules>
            <ZetaPrints_MvProductivityPack before="Mage_Cms">ZetaPrints_MvProductivityPack_Cms</ZetaPrints_MvProductivityPack>
          </modules>
        </args>
      </cms>
    </routers>

    <events>
      <controller_action_layout_render_before_catalog_category_view>
        <observers>
          <productivity_add_category_feed>
            <type>singleton</type>
            <class>ZetaPrints_MvProductivityPack_Model_Observer</class>
            <method>addCategoryFeed</method>
          </productivity_add_category_feed>
        </observers>
      </controller_action_layout_render_before_catalog_category_view>

      <controller_action_layout_render_before_cms_index_index>
        <observers>
          <productivity_add_latest__product_feed>
            <type>singleton</type>
            <class>ZetaPrints_MvProductivityPack_Model_Observer</class>
            <method>addLatestProductsFeed</method>
          </productivity_add_latest__product_feed>

          <productivity_add_top_categories_feed>
            <type>singleton</type>
            <class>ZetaPrints_MvProductivityPack_Model_Observer</class>
            <method>addTopCategoriesFeed</method>
          </productivity_add_top_categories_feed>
        </observers>
      </controller_action_layout_render_before_cms_index_index>
    </events>
  </frontend>

  <admin>
    <routers>
      <MvProductivityPack>
        <use>admin</use>
        <args>
          <module>ZetaPrints_MvProductivityPack</module>
          <frontName>mvproductivitypack</frontName>
        </args>
      </MvProductivityPack>
    </routers>
  </admin>

  <adminhtml>
    <layout>
      <updates>
        <MvProductivityPack>
          <file>zetaprints_mvproductivitypack.xml</file>
        </MvProductivityPack>
      </updates>
    </layout>
  </adminhtml>
</config>
