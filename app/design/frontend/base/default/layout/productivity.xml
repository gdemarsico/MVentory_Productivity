<?xml version="1.0"?>

<layout version="0.1.0">
  <mvproductivitypack_rss_product_latest>
    <block type="MvProductivityPack/rss_product_latest" output="toHtml" name="rss.product.latest" />
  </mvproductivitypack_rss_product_latest>

  <MvProductivityPack_panel>
    <reference name="head">
      <action method="addCss">
        <stylesheet>productivity/css/mvproductivitypack.css</stylesheet>
      </action>
    </reference>

    <reference name="after_body_start">
      <block type="MvProductivityPack/panel" name="admin_panel" after="-" template="productivity/panel.phtml" />
    </reference>
  </MvProductivityPack_panel>

  <catalog_product_view>
    <reference name="head">
      <action method="addJs">
        <script>jquery/jquery-min.js</script>
      </action>

      <action method="addJs">
        <script>jquery/jquery-fineuploader-min.js</script>
      </action>

      <action method="addJs">
        <script>productivity/image/edit.js</script>
      </action>
    </reference>

    <reference name="before_body_end">
      <block type="MvProductivityPack/image_edit" name="productivity.image.edit" template="productivity/image/edit.phtml">
        <action method="setImageSelector">
          <selector><![CDATA[#product_addtocart_form > .product-img-box > .product-image > img]]></selector>
        </action>

        <action method="setThumbSelector">
          <selector><![CDATA[#product_addtocart_form > .product-img-box > .more-views > ul > li > a > img]]></selector>
        </action>

        <action method="setImageSize">
          <width>265</width>
          <height></height>
        </action>

        <action method="setThumbSize">
          <width>56</width>
          <height></height>
        </action>
      </block>

      <block type="core/template" name="productivity.panel.upload.js" template="productivity/panel/uploader/js.phtml" />
    </reference>
  </catalog_product_view>

  <catalog_category_default>
    <update handle="MvProductivityPack_panel" />
  </catalog_category_default>

  <catalog_category_layered>
    <update handle="MvProductivityPack_panel" />
  </catalog_category_layered>

  <catalog_product_view>
    <update handle="MvProductivityPack_panel" />
  </catalog_product_view>

  <cms_page>
    <update handle="MvProductivityPack_panel" />
  </cms_page>
</layout>
